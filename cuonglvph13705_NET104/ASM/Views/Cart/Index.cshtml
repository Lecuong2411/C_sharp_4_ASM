
@model IEnumerable<ASM.Models.GioHang_ChiTiet>
<h2>GIỎ HÀNG</h2>
<div class="row">
    <div class="col-8">
        <table class="table">
            @foreach (var x in ViewBag.cart)
            {
                <tr>
                    <td><input type="checkbox" name="name" value="" /></td>
                    <td><img src="~/Images/@x.SanPham.ImgName" width="60px" /></td>
                    <td>@x.SanPham.TenSanPham</td>
                    <td>@x.SanPham.GiaBan</td>
                    <td><input class="form-control" type="text" name="name" value="@x.soluong" /></td>
                    <td>@(x.soluong* x.SanPham.GiaBan)</td>
                    <td>
                        <a asp-controller="Cart" asp-action="Remove" asp-route-id="@x.SanPham.MaSanPham">Xóa</a>
                    </td>
                </tr>
            }
            <tr>
                <td align="right" colspan="6">Tổng</td>
                <td>
                    @ViewBag.total
                </td>
            </tr>
        </table>
    </div>
    <div class="col-4">

    </div>
</div>

<br />
<a asp-controller="Product" asp-action="Index">Tiếp tục mua hàng</a>
<a asp-controller="CheckOut" asp-action="Index">Thanh toán ngay</a>
